{
	"manifest_version":2,

	"name":"G Bookmark Manager",
	
	"description":"Bookmark Management",
	
	"version":"1.0.0",

	"page_action": {
		"default_icon":"icon.png",
		"default_title":"Bookmark Manager",
		"default_popup":"chrome-popdown/chrome-popdown.html"
	},
	

	"background":{
		"scripts":["eventHandler.js"],
		"persistent":false
	},

	"content_scripts":[
		{
			"matches":[ "http://*/*", "https://*/*" ],

			"js":[
				"node_modules/jquery/dist/jquery.min.js",

				"wordreplacer.js", 
				"eventHandler.js"
			],

			"css":[
				"node_modules/bootstrap/dist/css/bootstrap.min.css",
				"node_modules/bootstrap-material-design/dist/css/bootstrap-material-design.css"
			],
			
			"run_at": "document_end"
		}
	],

	"permissions":[
		"tabs",
		"http://instagram.com/*",
		"https://instagram.com/*",
		"http://*/*",
		"https://*/*"
	]		
}